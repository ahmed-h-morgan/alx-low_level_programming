# Compiler
CC = gcc

# Name of the executable
NAME = school

# Source files (manually listed)
SRC = main.c school.c

# Object files (replaces .c with .o)
OBJ = $(SRC:.c=.o)

# Remove command
RM = rm -f

# Default target
all: $(NAME)

# Build executable from object files
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

# Pattern rule to compile .c files to .o files
%.o: %.c
	$(CC) -c $< -o $@

# Clean temporary files and executable
clean:
	$(RM) *~ $(NAME)

# Clean object files
oclean:
	$(RM) $(OBJ)

# Clean everything
fclean: clean oclean

# Rebuild everything
re: fclean all

# Prevent rules from failing
.PHONY: all clean oclean fclean re