# Compiler and flags
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

# Executable name
NAME = school

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Default target
all: $(NAME)

# Build executable
$(NAME): $(OBJ)
	$(CC) $^ -o $@

# Compile .c files to .o files with header dependency
main.o: m.h
school.o: m.h

# Clean temporary files and executable
clean:
	$(RM) *~ $(NAME)

# Clean object files  
oclean:
	$(RM) $(OBJ)

# Clean everything
fclean: clean oclean

# Rebuild everything
re: fclean all

# Prevent rules from failing
.PHONY: all clean oclean fclean re