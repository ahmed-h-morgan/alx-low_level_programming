# 100-Makefile
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^ $(CFLAGS)

main.o: main.c m.h
	$(CC) -c -o $@ $< $(CFLAGS)

school.o: school.c m.h
	$(CC) -c -o $@ $< $(CFLAGS)

clean:
	$(RM) *~ \#*\# .\#* vgcore.* core $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re